{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "$/*": ["./lib/*"]
        },
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": [
        "example.ts",
        "**/*.ts"
    ],
    "exclude": [
        "dist/**/*",
        "scratch.ts",
        "**/*.test.ts",
        "jest.config.ts"
    ]
}
